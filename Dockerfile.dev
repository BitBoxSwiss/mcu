FROM debian:stretch
ENV DEBIAN_FRONTEND noninteractive
WORKDIR /app
COPY . /app

RUN apt update && apt-get install -y cmake git gcc-arm-none-eabi locales python
RUN apt install -y lib32bz2-1.0 lib32ncurses5 lib32z1 valgrind astyle clang
RUN locale-gen UTF-8
RUN cd /app/ && mkdir docker-build && cd docker-build && cmake .. -DBUILD_TYPE=firmware && make

RUN sha256sum docker-build/bin/*
